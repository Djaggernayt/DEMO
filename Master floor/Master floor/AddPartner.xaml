<Window x:Class="Master_floor.AddPartner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Master_floor"
        mc:Ignorable="d"
        Title="AddPartner" Height="500" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Тип партнера" Grid.Row="1" />
        <Label Content="Наименование партнера" Grid.Row="2"/>
        <Label Content="Директор" Grid.Row="3"/>
        <Label Content="Электронная почта" Grid.Row="4"/>
        <Label Content="Телефон" Grid.Row="5"/>
        <Label Content="Юридический адрес" Grid.Row="6"/>
        <Label Content="ИНН" Grid.Row="7"/>
        <Label Content="Рейтинг" Grid.Row="8"/>
        <ComboBox x:Name="type" Grid.Column="1" Grid.Row="1" Margin="10">
            <ComboBoxItem Content="ЗАО" />
            <ComboBoxItem Content="ОАО" />
            <ComboBoxItem Content="ООО" />
            <ComboBoxItem Content="ПАО" />
        </ComboBox>
        <TextBox x:Name="name" Grid.Row="2" Grid.Column="1" Margin="10"/>
        <TextBox x:Name="director" Grid.Column="2" Grid.Row="3" Margin="10"/>
        <TextBox x:Name="email" Grid.Column="2" Grid.Row="4" Margin="10"/>
        <TextBox x:Name="telephone" Grid.Column="2" Grid.Row="5" Margin="10"/>
        <TextBox x:Name="adress" Grid.Column="2" Grid.Row="6" Margin="10"/>
        <TextBox x:Name="inn" Grid.Column="2" Grid.Row="7" Margin="10"/>
        <TextBox x:Name="rating" Grid.Column="2" Grid.Row="8" Margin="10"/>
        <Button x:Name="addUpdate" Grid.Column="0" Grid.Row="9" Margin="10" Content="Add" Click="addUpdate_Click" />
        <Button x:Name="back" Grid.Column="1"  Grid.Row="9" Margin="10" Content="Back" Click="back_Click" />
    </Grid>
</Window>
